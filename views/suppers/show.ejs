<%- include ../templates/_head.ejs %>
<body>
 
 <%- include ../templates/_header.ejs %>

<div class="box box-10"> 
  <div id="supper-image">
    <img src="<%= supper.image %>" />
  </div>
</div>

       
<div class="box box-10"> 
  <div id="supper-information">
    <div class="container">
      <div class="box box-7">
        <p class="supper-title"><%= supper.title %></p>
        <large><%= supper.address[0].city %></large>
        <small><%= supper.date %></small>
        <ul>
          <li class="box box-3">
            <div><i class="fa fa-users"></i></div>
            <small><%= supper.guest %> guests</small>
          </li>
          <li class="box box-3">
            <div><i class="fa fa-check"></i></div>
            <small><%= supper.menu[0].veggie%> veggie </small>
          </li>
          <li class="box box-3">
            <div><i class="fa fa-times"></i></div>
            <small><%= supper.menu[0].vegan%> vegan </small>
            </li>
        </ul>
     </div>
     <div class="box box-3">
       <div class="booking-form">
         <div class="booking-header">
            Attend this supper
          </div>
          <div id="notify"></div>
          <div class="booking-content">
             To attend this dinner please book below.
          </div>   
          <div class="booking-button">
            <form action="/suppers/<%=supper._id%>" method="POST"> 
              <input type="submit" class="attending btn btn-prim" value="attend">
            </form>               
          </div>
           
       </div>
     </div>
    </div>
  </div>
</div> 

 
  <div  class="pink-section">
   <div class="container">
    <div class="box box-6 " id="supper-description">
       <div class="box box-10">
            <h3>Description</h3>
            <p> <%= supper.description %></p>
                 <div class="box box-10" id="supper-info">
                    <h3>Supper Information</h3>
                  </div>   
                  <div id="cuisine">
                      <div class="box box-4">
                         <h4>Cuisine</h4>
                      </div> 
                       <div class="box box-6">
                         <p><%= supper.menu[0].cuisine %></p>
                        </div>  
                    </div4>
                    <div id="dishes">
                        <div class="box box-4">
                        <h4>Dishes</h4>
                        </div>
                        <div class="box box-6">
                         <p><%= supper.menu[0].dishes %></p>
                      </div>   
                    </div>  
               </div>
            </div>
         </div>
       </div>
      </div> 
    </div> 
  
    
    <div class="box box-10" id="map-wrapper">
      <div class="box box-7" id="map" style="width:100%; height:200px;">
      </div>
    </div>  
   
  

 

</body>
</html>