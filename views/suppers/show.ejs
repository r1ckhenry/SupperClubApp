<%- include ../templates/_head.ejs %>
<body>
 
 <%- include ../templates/_header.ejs %>

<div class="box box-10"> 
  <div id="supper-image">
    <img src="<%= supper.image %>" />
  </div>
</div>

<address style="display:none"><%= supper.address[0].postCode %></address>

<div class="box box-10"> 
  <div id="supper-information">
    <div class="container">
      <div class="box box-7">
        <p class="show-lead"><%= supper.title %></p>
        <p class="show-medium"><%= supper.date %></p>
        <ul>
          <li class="box box-3">
            <div><i class="fa fa-users"></i></div>
            <small><%= supper.guest %> guests</small>
          </li>
          <li class="box box-3">
          
            <% if (supper.menu[0].veggie === true) { %>
            <i class="text-center fa fa-check"></i>
            <% } else { %>
            <i class="text-center fa fa-times"></i>
           <% } %>
            <p class="medium text-center">Veggie</p>
            </li>
          <li class="box box-3">
             <% if (supper.menu[0].vegan === true) { %>
              <i class="text-center fa fa-check"></i>
              <% } else { %>
              <i class="text-center fa fa-times"></i>
              <% } %>
              <p class="medium text-center">Vegan</p>
            </li>
        </ul>
     </div>
     <div class="box box-3">
       <div class="booking-form">
         <div class="booking-header">
            Attend this supper
            <span class="small pull-right"><%= supper.address[0].city %></span>
          </div>
          <div id="notify"></div>
          <div class="booking-content">
             To attend this dinner please book below.
          </div>   
          <div class="booking-button">
            <form method="POST" action="/suppers/<%=supper._id%>"> 
              <input type="submit" class="attending btn btn-prim" value="attend">
            </form>               
          </div>
           
       </div>
     </div>
    </div>
  </div>
</div> 

 
  <div  class="pink-section">
   <div class="container">
    <div class="box box-6 " id="supper-description">
       <div class="box box-10">
            <h3 class="listing-heading">About this supper</h3>
            <p class="medium"> <%= supper.description %></p>
                 <div class="box box-10" id="supper-info">
                    <h3 class="listing-heading">Supper Information</h3>
                  </div>   
                  <div id="cuisine">
                      <div class="box box-4">
                         <p class="medium">Cuisine</p>
                      </div> 
                       <div class="box box-6">
                         <p class="small"><%= supper.menu[0].cuisine %></p>
                        </div>  
                    </div4>
                    <div id="dishes">
                        <div class="box box-4">
                        <p class="medium">Dishes</p>
                        </div>
                        <div class="box box-6">
                         <p class="small"><%= supper.menu[0].dishes %></p>
                      </div>   
                    </div>  
               </div>
            </div>
         </div>
       </div>
      </div> 
    </div> 
  
    
    <div class="box box-10" id="map-wrapper">
      <div class="box box-7" id="map" style="width:100%; height:400px;">
      </div>
    </div>  
   
  

 

</body>
</html>