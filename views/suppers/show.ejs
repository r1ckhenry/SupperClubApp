<%- include ../templates/_head.ejs %>
<body>

  <h1><%= supper.description %></h1>
  <p><%= supper.dressCode %></p>
  <p><%= supper.menu[0].drinks %></p>
  <p><%= supper.menu[0].cuisine %></p>
  <p><%= supper.menu[0].dishes %></p>


  <address><%=supper.address[0].postCode%></address>
  
  <div id="map-wrapper">
    <div id="map" style="width:1430px; height:500px;"></div>
  </div>

  <img src="<%= supper.image %>" />


  <form action="/suppers/<%=supper._id%>" method="POST"> 
    <input type="submit" class="attending" value="attend">
  </form>

  <div id="notify"></div>

</body>
</html>