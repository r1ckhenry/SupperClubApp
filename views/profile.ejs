<%- include templates/_header.ejs %>

        <div class="host-suppers" style="background-color: red">
            <h2>Suppers you are hosting</h2>
            <% for(var i = 0; i < result.length; i++) { %>
              <% if (String(result[i].userid) === String(user.id)) { %>
                <div class="supper-card">
                    <img src="<%= result[i].image%>">
                    <div class="supper-card-content">
                        <p class='lead'><%= result[i].title %></p>
                        <p class='small'><%= result[i].date %></p>

                        <p class="small-alert-header">Location:</p>
                        
                        <p class='small'><%= result[i].address[0].firstLine %></p>
                        <hr>
                        <p class='small'><%= result[i].address[0].secondLine %></p>
                        <hr>
                        <p class='small'><%= result[i].address[0].city %></p>
                        <hr>
                        <p class='small'><%= result[i].address[0].postCode %></p>
                        <hr>
                        <div class="box box-5">
                            <% if (result[i].menu[0].veggie === true) { %>
                                <i class="text-center fa fa-check"></i>
                            <% } else { %>
                                <i class="text-center fa fa-times"></i>
                            <% } %>
                            <p class="medium text-center">Veggie</p>
                        </div>
                        <div class="box box-5">
                            <% if (result[i].menu[0].vegan === true) { %>
                                <i class="text-center fa fa-check"></i>
                            <% } else { %>
                                <i class="text-center fa fa-times"></i>
                            <% } %>
                            <p class="medium text-center">Vegan</p>
                        </div>
                        
                        
                    </div>
                </div>
              <% } %>
            <% } %>      
        </div>

        <div class="attend-suppers">
            <h2>Suppers you are attending</h2>
            <% for(var i = 0; i < result.length; i++) { %>
              <% if (String(result[i].userid) !== String(user.id)) { %>
                <div class="supper-card">
                    <img src="<%= result[i].image%>">
                    <p class='lead'><%= result[i].title %></p>
                    <p><%= result[i].dressCode %></p>
                    <p><%= result[i].date %></p>
                    <p><%= result[i].address[0].firstLine %></p>
                    <p><%= result[i].address[0].secondLine %></p>
                    <p><%= result[i].address[0].city %></p>
                    <p><%= result[i].address[0].postCode %></p>
                    <p><%= result[i].menu[0].veggie %></p>
                    <p><%= result[i].menu[0].vegan %></p>
                    <p><%= result[i].menu[0].dishes %></p>
                    <p><%= result[i].menu[0].drinks %></p>
                </div>
              <% } %>
            <% } %> 
        </div>

    <section class="white-section">
        <div class="container">
            <div class="pull-right">
                <a href="/logout" class="btn btn-sec">Logout</a>
                <a href="/profile/edit" class="btn btn-prim">Edit</a>
            </div>
        </div>
        <div class="container">
            <div class="show-profile">
                <ul>        
                    <li>
                        <div class="box box-5">Image</div>
                        <div class="box box-5"><%= user.name %></div>                
                    </li>
                    <li>
                        <div class="box box-5">Name</div>
                        <div class="box box-5"><%= user.name %></div>
                    </li>
                    <li>
                        
                        <div class="box box-5">Email</div>
                        <div class="box box-5"><%= user.email %></div>
                    </li>
                    <li>
                        <div class="box box-5">Bio</div>
                        <div class="box box-5"><%= user.bio %></div>
                    </li>
                    <li>
                        <div class="box box-5">faveCuisines</div>
                        <div class="box box-5"><%= user.faveCuisines %></div>
                    </li>
                </ul>
            </div>

        </div>
    </section>

</body>
</html>