<%- include templates/_head.ejs %>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/profile/edit" class="btn btn-default btn-sm">Edit</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.name %> </h3>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>password</strong>: <%= user.password %>
                    </p>
                    <p>faveCuisines: <%= user.faveCuisines %></p>
            </div>
        </div>

        <p>suppers attending:<%= user.suppersAttending %></p>
        <p>suppers created: <%= user.suppersCreated %></p>

    </div>

</div>
</body>
</html>